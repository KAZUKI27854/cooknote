<div class="col-lg-6 col-md-6 col-sm-12">
  <div class="card recipe-card">
    <%= link_to  cooking_path(cooking.id) do %>
      <%= attachment_image_tag cooking, :cooking_image, size: "300x300", class: "card-img-top "; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag cooking.user, :profile_image, size: "60x60", fallback: "no_image.jpg", class: "mt-3 rounded-circle"; %>
        </div>
        <div class="col-10 card-text">
          <p class="card-title"><%= cooking.title %></p>
          <span><i class="fas fa-user text-light"></i> By <%= cooking.user.name %> ｜ </span>
          <span>
            <%= link_to "#{cooking.post_comments.count} コメント",
                cooking_path(cooking.id), class: "text-light" %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

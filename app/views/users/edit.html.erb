<div class="user-edit">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-2 col-sm-0"></div>

      <div class="col-lg-6 col-md-8 col-sm-12 user-edit-form">
        <h3>プロフィール編集</h3>
        <%= form_with model: @user, local:true do |f| %>
          <div class="form-group mt-2">
            <label for="inputName">名前</label>
            <%= f.text_field :title, class: "form-control", placeholder: "名前" %>
          </div>
          <div class="form-group">
            <label for="inputImage">画像</label>
            <%= f.attachment_field :profile_image, class: "form-control-file" %>
          </div>

          <%= f.submit '変更', class: "btn btn-primary btn-sm" %>
        <% end %>
      </div>

      <div class="col-lg-3 col-md-2 col-sm-0"></div>

    </div>
  </div>
</div>
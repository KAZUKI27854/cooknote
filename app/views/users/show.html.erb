<h1>マイページ</h1>
<div class="my-page-container">
  <div class="row">
    <div class="col-3">
<p>
  <%= attachment_image_tag @user, :profile_image, size: "60x60", fallback: "no_image.jpg" %>
</p>
<p>
  <%= @user.name %>
</p>
<p>
  <%= link_to "プロフィール編集", edit_user_path %>
</p>
<P>
  <%= "#{@cookings.count}レシピ" %>
</P>
</div>

<div class="col-6">
<div class="card-list-container">
  <% @cookings.each do |cooking| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg" >
      <%= link_to  cooking_path(cooking.id) do %>
        <%= attachment_image_tag cooking, :cooking_image, class: "card-img-top "; %>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <%= attachment_image_tag cooking.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "mt-3 rounded-circle"; %>
          </div>
          <div class="col-10 card-text">
            <p class="card-title">
              <%= cooking.title %>
            </p>
            <span><i class="fas fa-user text-dark"></i> By <%= cooking.user.name %> ｜ </span>
            <span>
              <%= link_to "#{cooking.post_comments.count} コメント",
                  cooking_path(cooking.id), class:"text-dark" %>
            </span>
          </div>
        </div>
      </div>
    </div>

    <% end %>
    </div>




</div>
</div>
</div>